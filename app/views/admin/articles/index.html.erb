<div class="container">
   <div class="row">
      <div class="col-lg-12 col-md-12 mx-auto">
        <table class="table table-stripped">
          <thead>
           <tr>
             <th>Title</th>
             <th>Sub title</th>
             <th>Author</th>
             <th colspan="2">Actions</th>
           </tr>
          </thead>
          <tbody>
            <% @articles.each do |article| %>
              <tr>
                <td><%= article.title %></td>
                <td><%= article.sub_title %></td>
                <td><%= article.user.name %><br/><small><%= article.user.email %></small></td>
                <td><%= link_to "Edit", edit_admin_article_path(article) %></td>
                <td><%= link_to "Delete", admin_article_path(article), method: :delete,  data: { confirm: 'Are you certain you want to delete this article?' } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
   </div>
</div>